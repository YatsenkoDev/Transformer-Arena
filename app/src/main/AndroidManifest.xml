<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aequilibrium.assignment.transfarena">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".TransfArenaApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MainTheme">
        <activity
            android:name=".gallery.ui.activity.GalleryActivity"
            android:screenOrientation="portrait"
            android:label="@string/transformers_gallery">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".preview.ui.PreviewActivity"
            android:screenOrientation="portrait"
            android:label="@string/transformer_preview"/>
        <activity
            android:name=".battle.ui.BattleActivity"
            android:screenOrientation="portrait"
            android:label="@string/battle_arena"/>
    </application>

</manifest>